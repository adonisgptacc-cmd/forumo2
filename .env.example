# Backend configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/forumo
JWT_SECRET=super-secret
JWT_TTL=86400
OTP_TTL=300
OTP_DEVICE_RATE_LIMIT=5
OTP_DEVICE_RATE_WINDOW=300
STRIPE_SECRET_KEY=sk_test_example

# Mailgun email delivery (leave unset to use the dev simulator)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.forumo.dev
MAILGUN_EMAIL_FROM=no-reply@forumo.dev
# MAILGUN_API_BASE=https://api.eu.mailgun.net

# AWS SNS SMS delivery (leave unset to use the dev simulator)
SNS_REGION=us-east-1
SNS_ACCESS_KEY_ID=your-sns-access-key
SNS_SECRET_ACCESS_KEY=your-sns-secret
SNS_SMS_SENDER_ID=FORUMO

# Frontend configuration
NEXTAUTH_SECRET=replace-me
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api/v1
NEXT_PUBLIC_USE_API_MOCKS=false
